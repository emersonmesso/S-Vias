<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBranco"
    tools:context=".View.View.PreProcessamento">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="104dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/carregando"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verificando Os Dados!"
                android:textAlignment="center" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:textAlignment="center">

            <com.google.android.gms.common.SignInButton
                android:id="@+id/sign_in_button"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center" />

            <android.support.v7.widget.AppCompatButton
                android:layout_width="match_parent"
                android:id="@+id/btnVisitante"
                android:onClick="visitante"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/colorBranco"
                android:text="Entrar Como Visitante"
                android:layout_height="match_parent" />

        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="564dp"
        tools:layout_editor_absoluteX="286dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <ProgressBar
            android:id="@+id/note_list_progress"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:layout_gravity="center_vertical" />
    </FrameLayout>

</android.support.constraint.ConstraintLayout>