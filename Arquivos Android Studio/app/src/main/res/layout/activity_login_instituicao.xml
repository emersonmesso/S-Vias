<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.LoginInstituicao">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginBottom="25dp"
                    android:layout_gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="111dp"
                        android:layout_margin="40dp"
                        android:src="@drawable/icon" />

                    <TextView
                        android:textSize="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Entre Com a Sua Conta!"
                        android:textAlignment="center" />

                </LinearLayout>



                <EditText
                    android:id="@+id/editEmail"
                    android:hint="E-mail Institucional"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/editSenha"
                    android:inputType="textPassword"
                    android:layout_marginTop="50dp"
                    android:hint="Senha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnLoginInstituicao"
                    android:layout_marginTop="40dp"
                    android:text="Entrar"
                    android:textSize="15dp"
                    android:background="@color/colorAppBar"
                    android:textColor="@color/colorBranco"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:text="Cadastre-se no Site!"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btnCadastroInstituicao"
                        android:textAlignment="center"
                        android:text="Cadastrar-me"
                        android:background="@color/colorAppBar"
                        android:textColor="@color/colorBranco"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />

                </LinearLayout>

            </LinearLayout>
        </FrameLayout>


    </ScrollView>


    <FrameLayout
        android:id="@+id/telaLoad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBranco"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgLoad"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:src="@drawable/load" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/aguarde"
                android:textAlignment="center" />
        </LinearLayout>


    </FrameLayout>

</android.support.constraint.ConstraintLayout>